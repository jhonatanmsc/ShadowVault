<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".FileListActivity">

    <FrameLayout
        android:id="@+id/top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/top_taskbar_default"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:elevation="8dp"
            android:visibility="visible">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_clear_24"
                android:contentDescription="Cancel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/no_files_found"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_select_all_24"
                android:contentDescription="Select all" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_taskbar_selection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_dark"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:elevation="8dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/cancel_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_clear_24"
                android:contentDescription="Cancel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:id="@+id/selected_count"
                android:text="@string/no_files_found"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/select_all_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_select_all_24"
                android:contentDescription="Select all" />

        </LinearLayout>
    </FrameLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh"
        android:layout_below="@+id/top_bar_container"
        android:layout_above="@+id/bottom_taskbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/nofiles_textview"
                android:text="@string/no_files_found"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/bottom_taskbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/copy_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_content_copy_24"
            android:contentDescription="Copy" />

        <ImageButton
            android:id="@+id/cut_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_content_cut_24"
            android:contentDescription="Cut" />

        <ImageButton
            android:id="@+id/rename_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_drive_file_rename_outline_24"
            android:contentDescription="Rename" />

        <ImageButton
            android:id="@+id/delete_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_delete_24"
            android:contentDescription="Delete" />

        <ImageButton
            android:id="@+id/info_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_info_24"
            android:contentDescription="Info" />

    </LinearLayout>

</RelativeLayout>